@model IEnumerable<VacationManagement.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}


<div class="row">
    <div class="col-md-12">


        <div class="row">
            <div class="col-8"></div>
            <div class="col-4">
                <p>
                    <a asp-action="Create">Create New Employee</a>
                </p>
            </div>
        </div>
       

@if (Model.Count() == 0)
{
    <h4 class="text-danger">No Employees Added</h4>

}
else{
<h4>All Employees</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VacationBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Did)
            </th>
       
            <th>Events</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VacationBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.Name)
            </td>
      
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |
                @Html.ActionLink("Details", "Details", new {  id=item.Id  }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.Id  })
            </td>
        </tr>
}
    </tbody>
</table>
}
    </div>
</div>